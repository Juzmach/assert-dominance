<% if @task %>
    <p>Are you sure you want to delete the task?</p>
    <br>
    <%= @task.title %>
    <br>
    <p>by <%= @task.username %>?</p>

    <form action="/<%= @task.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" value="Yes">
      <a href="/<%= @task.id %>">Cancel</a>
    </form>
<% else %>
    <p>Task not found.</p>
<% end %>