<header>
  <section class="headercontainer">
    <section class="headerpanel header-text">
      <h1>Assert( Web 1.0 )</h1>
    </section>
        <section class="headerpanel add">
          <h3>Create new task</h3>
          <form action="/" method="post">
            <span><input type="text" name="title" placeholder="Title"><br></span>
            <span><input type="text" name="username" placeholder="Username"><br></span>
            <span><textarea name="desc" placeholder="Description"></textarea><br></span>
            <span><input type="hidden" name="status" value="todo"></span>
            <span><input type="submit" value="submit"></span>
          </form>
        </section>
  </section>
</header>

<section class="panelcontainer">
  <section class="panel todo">
    <h3>To-Do</h3>
    <ul>
      <% @todos.each do |task| %>
          <li>
            <section class="task">
              <a href="/<%= task.id %>"><%= task.title %></a><br>
            </section>
          </li>
      <% end %>
    </ul>

  </section>

  <section class="panel inprogress">
    <h3>In Progress</h3>
    <ul>
      <% @inprogresses.each do |task| %>
          <li>
            <section class="task">
              <a href="/<%= task.id %>"><%= task.title %></a><br>
            </section>
          </li>
      <% end %>
    </ul>
  </section>

  <section class="panel done">
    <h3>Done</h3>

    <ul>
      <% @doneds.each do |task| %>
          <li>
            <section class="task">
              <a href="/<%= task.id %>"><%= task.title %></a><br>
            </section>
          </li>
      <% end %>
    </ul>

  </section>
</section>